<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

  <!-- 欢迎页面 -->
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
  </welcome-file-list>

<!--  &lt;!&ndash; 注册Servlet &ndash;&gt;-->
    <servlet>
      <servlet-name>RegisterServlet</servlet-name>
      <servlet-class>com.gsm.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>RegisterServlet</servlet-name>
      <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- 登录Servlet -->
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>com.gsm.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 模板Servlet -->
    <servlet>
      <servlet-name>ModuleServlet</servlet-name>
      <servlet-class>com.gsm.servlet.ModuleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>ModuleServlet</servlet-name>
      <url-pattern>/moduleList</url-pattern>
    </servlet-mapping>

    <!-- 活动编辑Servlet -->
    <servlet>
      <servlet-name>EditEventServlet</servlet-name>
      <servlet-class>com.gsm.servlet.EditEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>EditEventServlet</servlet-name>
      <url-pattern>/editEvent</url-pattern>
    </servlet-mapping>

    <!-- 活动管理Servlet -->
    <servlet>
      <servlet-name>ManageEventsServlet</servlet-name>
      <servlet-class>com.gsm.servlet.ManageEventsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>ManageEventsServlet</servlet-name>
      <url-pattern>/manageEvents</url-pattern>
    </servlet-mapping>

    <!-- 个人中心Servlet -->
    <servlet>
      <servlet-name>PersonalCenterServlet</servlet-name>
      <servlet-class>com.gsm.servlet.PersonalCenterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>PersonalCenterServlet</servlet-name>
      <url-pattern>/personalCenter</url-pattern>
    </servlet-mapping>

    <!-- 奖品管理Servlet -->
    <servlet>
      <servlet-name>PrizeServlet</servlet-name>
      <servlet-class>com.gsm.servlet.PrizeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>PrizeServlet</servlet-name>
      <url-pattern>/prizes</url-pattern>
    </servlet-mapping>

